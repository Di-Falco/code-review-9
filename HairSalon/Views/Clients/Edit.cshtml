@{ Layout = "_Layout"; }

@model HairSalon.Models.Client

<h2>Edit</h2>
<hr />

<h4>Edit details for this client: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Save" />
}
<a href='@Url.Action("Delete", new { id = Model.ClientId })'><button>Delete Client</button></a>&emsp;
<a href='@Url.Action("Index")'><button>Back to List</button></a>&emsp;
<a href='@Url.Action("Index", "Home")'><button>Home</button></a>