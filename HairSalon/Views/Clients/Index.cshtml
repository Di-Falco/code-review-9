@{ Layout = "_Layout"; }

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>
<hr />

<ul>
  @foreach (Client client in Model)
  {
    <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
  }
</ul>

<hr />
<a href='@Url.Action("Index", "Stylists")'><button>See all Stylists</button></a>&emsp;
<a href='@Url.Action("Create")'><button>Add new client</button></a>&emsp;
<a href='@Url.Action("Index", "Home")'><button>Home</button></a>