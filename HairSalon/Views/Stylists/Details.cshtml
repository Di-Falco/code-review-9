@{ Layout = "_Layout"; }

@using HairSalon.Models
@model HairSalon.Models.Stylist

<h2>Stylist Details</h2>
<hr />
<h3>@Html.DisplayFor(model => model.Name)</h3>
<p>Clients:</p>
@if(@Model.Clients.Count == 0)
{
  <p><em>There are no clients for this stylist</em></p>
} else {
  <ul>
  @foreach(Client client in Model.Clients)
  {
    <li>@Html.ActionLink($"{client.Name}", "Details", "Clients" , new { id = client.ClientId })</li>
  }
  </ul>
}
<hr />
<a href='@Url.Action("Create", "Clients")'><button>Add Client</button></a>
<hr />
<a href='@Url.Action("Edit", new { id = @Model.StylistId })'><button>Edit Stylist</button></a>&emsp;
<a href='@Url.Action("Delete", new { id = @Model.StylistId })'><button>Delete Stylist</button></a>
<hr />
<a href='@Url.Action("Index")'><button>Back to List</button></a>&emsp;
<a href='@Url.Action("Index", "Home")'><button>Home</button></a>