@{ Layout = "_Layout"; }

@using HairSalon.Models

<h2>Stylist Details</h2>
<hr />
<h3>Details for stylist: @Model["stylist"].Name</h3>
<p>Clients:</p>
@if(@Model["clients"].Count == 0)
{
  <p><em>There are no clients for this stylist</em></p>
} else {
  <ul>
  @foreach(Client client in Model["clients"])
  {
    <li>@Html.ActionLink($"{client.Name}", "Details", "Clients" , new { id = client.ClientId })</li>
  }
  </ul>
}
<a href='@Url.Action("Create", "Clients")'><button>Add Client</button></a>&emsp;
<a href='@Url.Action("Edit", new { id = @Model["stylist"].StylistId })'><button>Edit Stylist</button></a>&emsp;
<a href='@Url.Action("Delete", new { id = @Model["stylist"].StylistId })'><button>Delete Stylist</button></a>&emsp;
<a href='@Url.Action("Index")'><button>Back to List</button></a>&emsp;
<a href='@Url.Action("Index", "Home")'><button>Home</button></a>