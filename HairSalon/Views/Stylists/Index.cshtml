@{ Layout = "_Layout"; }

@using HairSalon.Models;

<h2>Stylists</h2>
<hr />

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet</h3>
}

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

<a href='@Url.Action("Create")'><button>Add new Stylist</button></a>&emsp;
<a href='@Url.Action("Index", "Home")'><button>Home</button></a>